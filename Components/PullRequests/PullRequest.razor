<div class="card" style="width: 50rem;">
  <div class="card-body">
    <h5 class="card-title">@title</h5>
    @foreach (var label in labels)
    {
        <button type="button" class="btn btn-primary">@label.name</button>
    }
  </div>
</div>

@functions {
    [Parameter]
    private string title { get; set; }

    [Parameter]
    private PullRequestLabel[] labels { get; set; }
}